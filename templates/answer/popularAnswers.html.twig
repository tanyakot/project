{% extends 'base.html.twig' %}
{% block title %}Popular Answers{% endblock %}
{% block body %}
    <div class="container my-md-4">
        <div class="row">
            <h1>Most Popular Answers</h1>
        </div>

        <ul class="list-unstyled">
            {% for answer in answers %}
                <li>{{ answer.content|u.truncate(5, '..') }}</li>
                <li>{{ answer.votes }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}